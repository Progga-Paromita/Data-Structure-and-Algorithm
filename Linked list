#include<iostream>
using namespace std;

class node
{
public:
    int data;
    node* next;
    node(int val)
    {
        data=val;
        next=NULL;
    }
};

int main()
{
    int arr[4]= {1,2,3,4};
    node* head=NULL;
    node* temp,*tail=NULL;
    //Add first
    for(int i=0; i<4; i++)
    {
        if(head==NULL)
        {
            head=new node(arr[i]);
        }
        else
        {
            temp=new node(arr[i]);
            temp->next=head;
            head=temp;
        }
    }
    for(int i=0;i<4;i++)
    {
        while(temp!=NULL)
        {
            cout<<temp->data<<" ";
            temp=temp->next;
        }
    }
    cout<<endl;
}
